<table class="table table-striped table-bordered table-hover">
	<thead class="thead-pink">
		<th>Titulo</th>
		<th>Editar</th>
		<th>Eliminar</th>
	</thead>
	<tbody>
<% @tareas.each do |tarea|%>
	<tr>
		<td><%= link_to "#{tarea.titulo}", tarea %> </td>
		<td><%= link_to "Editar", edit_tarea_path(tarea) %></td>
		<td><%= link_to "Eliminar", tarea, method: :delete, data: {confirm: 'Estas seguro?'} %></td>
	</tr>
<% end %>
	</tbody>
</table>

 