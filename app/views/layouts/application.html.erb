<!DOCTYPE html>
<html>
  <head>
    <title>Pagina</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

  </head>

  <body>
 <!--<nav class="navbar navbar-expand-lg navbar-dark bg-dark">-->
  <nav class="navbar navbar-light navbar-expand-lg" style="background-color: #e3f2fd;">
       <%= link_to "Inicio", root_path, class: "navbar-brand"%>
    <div class="collapse navbar-collapse ml-auto" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <%= link_to "Ver Denuncias", tareas_path, class: "nav-link" %>
        </li>        
        <li class="nav-item active">
          <%= link_to "Nueva denuncia", new_tarea_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Descripción", descripcion_path, class: "nav-link" %>
        </li>
      </ul>
    </div>

    <header>
    <div class="masthead clearfix">
      <div class="inner"></div>
          <nav class="nav justify-content-end ">
              <% if usuario_signed_in? %>
              <li class="nav-item active">
                <%= link_to "Cerrar sesión", destroy_usuario_session_path, method: :delete, class: "nav-link" %>
              </li>
            <% else %>        
            <li class="nav-item active">
              <%= link_to "Iniciar sesión", new_usuario_session_path, class: "nav-link" %>
            </li> 
            <li class="nav-item active">
              <%= link_to "Crear usuario", new_usuario_registration_path, class: "nav-link" %>
            </li>                
            <% end %>        
          </nav>
    </div>
   
  </header>
    
  </nav>

  <div class="container-fluid">
      <p> <%= notice %> </p>
      <p> <%= alert %> </p>
      <%= yield %>
  </div>
    <footer class="fixed-bottom text-center">Todos los derechos reservados Piensa Digital 2018</footer>
  </body>
</html>
